<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">

    <resultMap type="pojo.User" id="UserMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="tel" column="tel" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="isMate" column="isMate" jdbcType="INTEGER"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="lastTime" column="last_time" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <sql id="Beas_Column_List">
        id, username, password, sex, tel, email, isMate, avatar, last_time        
    </sql>

    <!--查询所有主键和名称-->
    <select id="selectAll" resultMap="UserMap">
        select
            <include refid="Beas_Column_List"/>
        from lovedb.user
        <where>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="isMate != null">
                isMate = #{ismate},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="lastTime != null">
                last_time = #{lastTime},
            </if>
        </where>
    </select>

    <!--查询单个-->
    <select id="selectById" resultMap="UserMap">
        select
            <include refid="Beas_Column_List"/>
        from lovedb.user
        where id = #{id}
    </select>

    <select id="getUserByName" resultMap="UserMap">
        select
        <include refid="Beas_Column_List"/>
        from lovedb.user
        where username = #{name}
    </select>
    
    <!--根据条件查询当前表的满足条件的个数-->
    <select id="selectForCount" resultType="int">
        select
          count(id)
        from lovedb.user
        <where>
            <if test="name != null and name != ''">
                name like "%"#{name}"%"
            </if>
        </where>
    </select>
    
    <!--通过实体作为筛选条件查询-->
    <select id="selectForPage" resultMap="UserMap">
        select
            <include refid="Beas_Column_List"/>
        from lovedb.user
        <where>
            <if test="name != null and name != ''">
                name like "%"#{name}"%"
            </if>
        </where>
        limit #{index},10;
    </select>

    <!--新增所有列-->
    <insert id="insert" parameterType="pojo.User">
        insert into lovedb.user(username, password, sex, tel, email, isMate, avatar, last_time)
        values (#{username}, #{password}, #{sex}, #{tel}, #{email}, #{isMate}, #{avatar}, #{lastTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="updateById" parameterType="pojo.User">
        update lovedb.user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="isMate != null">
                isMate = #{isMate},
            </if>
            <if test="avatar != null and avatar != ''">
                avatar = #{avatar},
            </if>
            <if test="lastTime != null">
                last_time = #{lastTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from lovedb.user where id = #{id}
    </delete>

</mapper>